<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_input_file_path"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
        <ImageButton
            android:id="@+id/btn_clear_file_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_notification_clear_all"
            android:background="@null"
            android:scaleType="centerInside"
            android:onClick="clickClearFilePathBtn"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_read"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/btn_read"
            android:onClick="clickReadFileBtn"/>

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/btn_clear"
            android:onClick="clickClearMessageBtn"/>

    </LinearLayout>
</LinearLayout>
